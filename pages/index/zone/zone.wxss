/* 整体容器 */

.container {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 搜索 */
.search-box{
  width: 710rpx;
  height: 75rpx;
  background-color: #e9e9e9;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search {
  width: 38rpx;
  height: 38rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-box text {
  width: 630rpx;
  height: 75rpx;
  font-size: 28rpx;
  line-height: 75rpx;
  color: #aeaeae;
}






/* 分类标签 */

.lables-list {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.lable-item {
  width: 215rpx;
  height: 72rpx;
  border: 1rpx solid #d9e5f2;
  border-radius: 10rpx;
  text-align: center;
  line-height: 72rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  font-size: 27rpx;
  color: #000;
  overflow: hidden;
}

/* 点击触发的样式 */

.actives {
  background-color: #2769b5;
  color: #fff;
}

/* 列表 */

.zone-list {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

/* 轮播图 */

.swiper{
  width: 750rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.banner {
  width: 750rpx;
  height: 300rpx;
}

.zone-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}

/* 商品图片 */

.goods {
  width: 240rpx;
  height: 240rpx;
  margin-right: 20rpx;
}

/* 信息部分 */

.zone-info {
  width: 470rpx;
  height: 240rpx;
  border-bottom: 1rpx solid #d2d2d2;
  box-sizing: border-box;
  padding: 15rpx 0rpx
}

/* 商品名字 */

.zone-info .name {
  width: 100%;
  height: 150rpx;
  font-size: 24rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.price-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.price-like .price {
  font-size: 30rpx;
  color: #ff6700;
}

.like image {
  width: 48rpx;
  height: 42rpx;
}


/* 轮播图指示点 */

.dots {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 440rpx;
  right: 55rpx;
  width: auto;
  height: auto;
}

.dots .dot {
  width: 15rpx;
  height: 15rpx;
  background-color: #333;
  margin-left: 12rpx;
  border-radius: 20rpx;
  opacity: 0.44;
}

/* 调用的css效果 */

.dots .actives {
  background-color: #2b6bb3;
  opacity: 1;
}
