  align-items: center;
}

.window-number{
  width: 560rpx;
  height: 380rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 350rpx;
}

.window-number-line{
  width: 560rpx;
  height: 80rpx;
