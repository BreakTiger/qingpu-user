page {
  background-color: #f5f5f5;
}

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-info {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx solid #d2d2d2;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
}

.goods {
  width: 188rpx;
  height: 188rpx;
  margin-right: 40rpx;
  margin-left: 25rpx;
}

.info-box {
  height: 188rpx;
  display: flex;
  flex-direction: column;
}

.info-box text {
  font-size: 30rpx;
  margin-top: 30rpx;
}

.state-line text {
  font-size: 30rpx;
}

.state2 {
  color: #ff6700;
}

/*物理跟踪*/

.yunshu-content {
  width: 750rpx;
  background: #fff;
  padding: 0 50rpx;
  margin-top: 30rpx;
  height: auto;
  padding-bottom: 100rpx;
}

.yunshu-list {
  border-left: 1rpx solid #d5d5d5;
  margin-left: 40rpx;
  margin-right: 10rpx;
}

.list-item {
  border-bottom: 1rpx solid #d5d5d5;
  margin: 0 20rpx;
  margin-top: 25rpx;
  padding-bottom: 25rpx;
  position: relative;
  width: 578rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

/* 文字大小 */

.list-item view {
  font-size: 25rpx;
}

.list-item .address {
  display: flex;
  flex-direction: column;
}

.list-item .address text {
  margin-bottom: 20rpx;
}

.label {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  position: absolute;
  left: -30rpx;
  top: -5rpx;
  background: #d5d5d5;
}

.default {
  background: #2b6bb3;
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  position: absolute;
  left: -30rpx;
  top: -5rpx;
}

.fontcolor {
  color: #2b6bb3;
}

.list-em {
  font-size: 32rpx;
  text-align: center;
  margin-top: 50rpx;
  color: #2b6bb3;

}
